<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/layout_rounded_background">

            <TextView
                android:id="@+id/primeira_letra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="P"
                android:layout_marginTop="-2dp"
                android:textColor="#fff"
                android:textSize="14sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user"
                android:textSize="15sp"
                android:fontFamily="@font/mukta_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="L*** G****"/>

            <TextView
                android:id="@+id/textView7"
                android:textSize="11sp"
                android:layout_marginTop="-4sp"
                android:textColor="@color/title_color"
                android:fontFamily="@font/mukta_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulher" />
        </LinearLayout>

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:letterSpacing="0.1"
            android:text="SP - São Paulo | 15/08/2021"
            android:textSize="10sp"
            android:textColor="@color/title_color"
            android:fontFamily="@font/mukta_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textBoletim"
            android:letterSpacing="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possui boletim de ocorrencia"
            android:textSize="9sp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/seloBoletim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/verificado" />

    </LinearLayout>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:lineSpacingExtra="2sp"
        android:textSize="15sp"
        android:layout_marginTop="2sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/mukta_regular"
        android:layout_height="wrap_content"
        android:text="Simplesmente uma simulação de texto da indústria tipográfica e de impressos, e vem sendo utilizado desde o século XVI, quando um impressor desconhecido pegou uma bandeja de tipos e os embaralhou para fazer um livro de modelos de tipos." />

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tipo"
            android:fontFamily="@font/mukta_light"
            android:textColor="@color/title_color"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Classificação do caso: Assédio Moral" />

        <ImageView
            android:id="@+id/image_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/savepub" />
    </LinearLayout>
</LinearLayout>